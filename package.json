{
  "name": "tallimantra",
  "version": "0.1.0",
  "description": "A plugin-based documentation and knowledge management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "asbjborg",
  "homepage": "https://github.com/asbjborg/tallimantra",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asbjborg/tallimantra.git"
  },
  "bugs": {
    "url": "https://github.com/asbjborg/tallimantra/issues"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "docs": "typedoc",
    "prepare": "husky install",
    "validate-plugins": "node scripts/validate-plugins.js",
    "build-plugin-registry": "node scripts/build-plugin-registry.js"
  },
  "keywords": [
    "documentation",
    "knowledge-management",
    "plugins",
    "typescript"
  ],
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "ajv": "^8.12.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.27.1",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md,json}": "prettier --write"
  }
} 