# App
NODE_ENV=development
PORT=3000

# Database (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# n8n
N8N_URL=http://localhost:5678          # Base URL of your n8n instance
N8N_API_KEY=your_n8n_api_key          # Optional: API key if configured

# n8n Basic Auth
N8N_BASIC_AUTH_USER=your_username     # Optional: n8n instance basic auth
N8N_BASIC_AUTH_PASS=your_password

# ngrok Basic Auth (if using ngrok)
NGROK_BASIC_AUTH_USER=your_ngrok_user # Optional: ngrok basic auth
NGROK_BASIC_AUTH_PASS=your_ngrok_pass

# LLM Providers (uncomment and configure the ones you use)
#OPENAI_API_KEY=your_openai_api_key
#ANTHROPIC_API_KEY=your_anthropic_api_key
#LLAMA_API_URL=your_llama_endpoint

# Plugin System
PLUGIN_SANDBOX_MEMORY_LIMIT=512  # Memory limit in MB for plugin sandbox
PLUGIN_TIMEOUT=30000             # Plugin execution timeout in ms
PLUGIN_STORE_URL=https://asbjborg.github.io/tallimantra/plugins  # Plugin directory in main repo

# Security
JWT_SECRET=your_jwt_secret_min_32_chars
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional Features
#ENABLE_TELEMETRY=false
#DEBUG=tallimantra:*
#LOG_LEVEL=info